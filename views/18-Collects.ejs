<%- include('Partials/Header.ejs'); -%>

    <%- include('Partials/Menu.ejs'); -%>

        <div class="Layout-Container">
            <%- include('Partials/DetailsCompany.ejs'); -%>
            <div class="Wrapper-Tilte">
                <h1 class="Title-Container"><%= Title %></h1>
                <div class="line">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
                <div class="Buttons-Container">
                    <div class="right">
                        <div class="Row grid-4">
                            <div class="card-item Primary">
                                <i class='item-icon bx bx-dollar'></i>
                                <div class="center">
                                    <h3 class="SumDebit">0.00</h3>
                                    <p>اجمالي سندات القبض</p>
                                </div>
                            </div>
                            <div class="card-item Teal">
                                <i class='item-icon bx bx-dollar'></i>
                                <div class="center">
                                    <h3 class="SumCredit">0.00</h3>
                                    <p>اجمالي سندات الدفع</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="left">
                        <%- include('Partials/Buttons.ejs'); -%>
                    </div>
                </div>

                <div class="Search-Container">
                    <div class="input-box">
                        <input type="search" id="SearchByName" class="SearchInput" onkeyup="Search()" required>
                        <label>البحث بالاسم</label>
                        <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                        <div class="Filter-box">
                            <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                            <i class='bx bxs-filter-alt Filter-icon' onclick="ShowFilter()"></i>
                            <div class="filter-item arrow arr-top-left">
                                <h5 id="SearchByName" class="active">البحث بالاسم </h5>
                                <h5 id="SearchByDocType">البحث بنوع السند</h5>
                                <h5 id="SearchByStatment">البحث بالبيان</h5>
                                <h5 id="SearchByUser">البحث بالمنشئ</h5>
                            </div>
                        </div>
                        <span class='bx bx-search'></span>
                    </div>
                    <%- include('Partials/SearchDate.ejs'); -%>

                </div>

                <div class="Table-Container">
                    <table class="Table HideTh">
                        <thead>
                            <tr>
                                <th>م</th>
                                <th>
                                    <div class="FlexTH">
                                        <Span>التاريخ</Span>
                                        <i id="DocDate" class='bx bx-filter-alt Filter-icon'
                                            onclick="SortMyData(event)"></i>
                                    </div>
                                </th>
                                <th>رقم السند</th>
                                <th>نوع السند</th>
                                <th>الاسم</th>
                                <th>بيان</th>
                                <th>القيمة</th>
                                <th>المنشئ</th>
                                <th>الاجراء</th>
                            </tr>
                        </thead>
                        <tbody class="Table-body"></tbody>
                    </table>
                </div>



                <div class="Form-Container Form-Collect">
                    <div class="overlow"></div>
                    <form class="Form">
                        <div class="Form-scroll">
                            <i onclick="Hide_Container()" class="bx bx-x X-Toast"></i>
                            <div class="Form-header">
                                <div class="Wrapper-Tilte">
                                    <h3>دفع </h3>
                                    <div class="line">
                                        <div></div>
                                        <div></div>
                                        <div></div>
                                    </div>
                                </div>
                                <i class="Form-logo">
                                    <img src="Img/Logo.png" alt="" srcset="">
                                    <h1 class="logo-text">MODERN</h1>
                                </i>
                            </div>

                            <div class="Person-Details">
                                <div class="right">
                                    <div class="item">
                                        <h4>تاريخ السند</h4>
                                        <p class="DocDate"></p>
                                    </div>
                                    <div class="item">
                                        <h4>رقم السند</h4>
                                        <p class="DocNu"></p>
                                    </div>
                                    <div class="item">
                                        <h4>نوع السند</h4>
                                        <p class="DocType"></p>
                                    </div>
                                </div>
                                <div class="left">
                                    <div class="item">
                                        <h4>الاسم</h4>
                                        <p class="Name"></p>
                                    </div>
                                    <div class="item">
                                        <h4>بيان </h4>
                                        <p class="Statment"></p>
                                    </div>
                                    <div class="item">
                                        <h4>قيمة </h4>
                                        <p class="Total"></p>
                                    </div>
                                </div>
                            </div>

                            <div class="Form-body">
                                <div class="Row grid-2">
                                    <div class="input-box">
                                        <input type="text" class="DocDate" onfocus="(this.type='date')"
                                            onblur="(this.type='text')" required>
                                        <label>التاريخ *</label>
                                        <span class="bx bx-calendar"></span>
                                    </div>
                                    <div class="input-box">
                                        <input type="number" min="1" class="Total" required>
                                        <label>المبلغ *</label>
                                        <span class='bx bx-dollar'></span>
                                    </div>
                                </div>
                                <div class="input-box">
                                    <input type="text" class="Statment" required>
                                    <label>بيان وملاحظات</label>
                                    <span class='bx bxs-message-dots'></span>
                                </div>

                            </div>
                            <div class="Form-footer">
                                <button type="button" onclick="EditCollectOrPayment(id)" class="btn btn-Save">حفظ
                                    البيانات</button>
                                <button type="button" onclick="Hide_Container()" class="btn btn-Cancel">الغاء</button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>

        <%- include('Partials/Footer.ejs'); -%>

            <script src="Js/20-Collects.js"></script>

            </body>

            </html>