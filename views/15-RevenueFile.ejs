<%- include('Partials/Header.ejs'); -%>

    <%- include('Partials/Menu.ejs'); -%>
        <% let SubTitle="ايراد" %>
            <% if (Title.includes("المصروف")){ %>
                <% SubTitle="مصروف" %>
                    <% } %>
                        <div class="Layout-Container">

                            <%- include('Partials/DetailsCompany.ejs'); -%>


                                <div class="Wrapper-Tilte">
                                    <h1 class="Title-Container2">كشف حساب <%= SubTitle %></h1>
                                </div>

                                <div class="Person-Details FileID" id="<%= FileID %>" index="<%= FileIndex %>">
                                    <div class="right">
                                        <div class="item">
                                            <h4>ID</h4>
                                            <p class="FileID">
                                                <%= FileID %>
                                            </p>
                                        </div>
                                        <div class="item">
                                            <h4>اسم ال<%= SubTitle %>
                                            </h4>
                                            <p class="Name"></p>
                                        </div>
                                        <div class="item">
                                            <h4>نوع ال<%= SubTitle %>
                                            </h4>
                                            <p class="Type"></p>
                                        </div>
                                    </div>
                                    <div class="left">
                                        <div class="item">
                                            <h4>قيمة ال<%= SubTitle %>
                                            </h4>
                                            <p class="AmountType"></p>
                                        </div>
                                        <div class="item">
                                            <h4>قيمة ال<%= SubTitle %>
                                            </h4>
                                            <p class="Amount"></p>
                                        </div>
                                        <div class="item">
                                            <h4>اجمالي المدفوع</h4>
                                            <p class="Balance"></p>
                                        </div>
                                        <%- include('Partials/Btns.ejs'); -%>
                                    </div>
                                </div>

                                <div class="Search-Container">
                                    <div class="input-box">
                                        <input type="search" id="SearchByDocType" class="SearchInput" onkeyup="Search()"
                                            required>
                                        <label>البحث بنوع المستند </label>
                                        <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                                        <div class="Filter-box">
                                            <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                                            <i class='bx bxs-filter-alt Filter-icon' onclick="ShowFilter()"></i>
                                            <div class="filter-item arrow arr-top-left">
                                                <h5 id="SearchByDocType" class="active">البحث بنوع المستند</h5>
                                                <h5 id="SearchByDocNu">البحث رقم المستند</h5>
                                                <h5 id="SearchByStatment">البحث بالبيان</h5>
                                                <h5 id="SearchByUser">البحث بالمنشئ</h5>
                                            </div>
                                        </div>
                                        <span class='bx bx-search'></span>
                                    </div>
                                    <%- include('Partials/SearchDate.ejs'); -%>

                                </div>

                                <div class="Table-Container">
                                    <table class="Table">
                                        <thead>
                                            <tr>
                                                <th>م</th>
                                                <th>
                                                    <div class="FlexTH">
                                                        <Span>التاريخ</Span>
                                                        <i id="Date" class='bx bx-filter-alt Filter-icon'
                                                            onclick="SortMyData(event)"></i>
                                                    </div>
                                                </th>
                                                <th>رقم المستند</th>
                                                <th>نوع المستند</th>
                                                <th>بيان</th>
                                                <th>مدين</th>
                                                <th>دائن</th>
                                                <th>رصيد</th>
                                                <th>المنشئ</th>
                                            </tr>
                                        </thead>
                                        <tbody class="Table-body"></tbody>
                                    </table>
                                </div>
                        </div>


                        <div class="Form-Container Form-ADD">
                            <div class="overlow"></div>
                            <form class="Form">
                                <div class="Form-scroll">
                                    <i onclick="Hide_Container()" class="bx bx-x X-Toast"></i>
                                    <div class="Form-header">
                                        <div class="Wrapper-Tilte">
                                            <h3>تعديل بيانات <%= SubTitle %> </h3>
                                            <div class="line">
                                                <div></div>
                                                <div></div>
                                                <div></div>
                                            </div>
                                        </div>
                                        <i class="Form-logo">
                                            <img src="Img/Logo.png" alt="" srcset="">
                                            <h1 class="logo-text">MODERN</h1>
                                        </i>
                                    </div>


                                    <div class="Form-body">
                                        <div class="input-box">
                                            <input type="text" class="Name" required>
                                            <label>الاسم *</label>
                                            <span class="bx bx-user"></span>
                                        </div>
                                        <div class="Row grid-2">
                                            <div class="input-box">
                                                <select class="Type">
                                                    <option value="<%= SubTitle %> يومي" selected>
                                                        <%= SubTitle %> يومي
                                                    </option>
                                                    <option value="<%= SubTitle %> شهري">
                                                        <%= SubTitle %> شهري
                                                    </option>
                                                    <option value="<%= SubTitle %> سنوي">
                                                        <%= SubTitle %> سنوي
                                                    </option>
                                                </select>
                                                <label>نوع ال<%= SubTitle %></label>
                                                <span class='bx bxs-category-alt'></span>
                                            </div>
                                            <div class="input-box">
                                                <select class="AmountType">
                                                    <option value="قيمة متغيرة" selected>قيمة متغيرة</option>
                                                    <option value="قيمة ثابتة">قيمة ثابنة</option>
                                                </select>
                                                <label>قيمة القيمة</label>
                                                <span class='bx bxs-category-alt'></span>
                                            </div>
                                        </div>
                                        <div class="input-box">
                                            <input type="text" class="Amount" required>
                                            <label>المبلغ </label>
                                            <span class='bx bx-dollar'></span>
                                        </div>
                                    </div>
                                    <div class="Form-footer">
                                        <button type="button" id="<%= FileID %>" onclick="EditRevenueOrExpense(id)"
                                            class="btn btn-Save">حفظ
                                            البيانات</button>
                                        <button type="button" onclick="Hide_Container()"
                                            class="btn btn-Cancel">الغاء</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <%- include('Partials/Footer.ejs'); -%>

                            <script src="Js/17-RevenueFile.js"></script>

                            </body>

                            </html>