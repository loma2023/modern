<%- include('Partials/Header.ejs'); -%>

    <%- include('Partials/Menu.ejs'); -%>

        <div class="Layout-Container">

            <%- include('Partials/DetailsCompany.ejs'); -%>

                <div class="Wrapper-Tilte">
                    <h1 class="Title-Container">
                        <%= Title %>
                    </h1>
                    <div class="line">
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>

                <div class="Buttons-Container">
                    <div class="right">
                        <div class="Row grid-4">
                            <div class="card-item Green">
                                <i class='item-icon bx bx-user'></i>
                                <div class="center">
                                    <h3 class="TableLength">0.00</h3>
                                    <p>عدد <%= Title %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="left">
                        <%- include('Partials/Buttons.ejs'); -%>
                    </div>
                </div>

                <div class="Search-Container">
                    <div class="input-box">
                        <input type="search" id="SearchByName" class="SearchInput" onkeyup="Search()" required>
                        <label>البحث بالاسم</label>
                        <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                        <div class="Filter-box">
                            <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                            <i class='bx bxs-filter-alt Filter-icon' onclick="ShowFilter()"></i>
                            <div class="filter-item arrow arr-top-left">
                                <h5 id="SearchByName" class="active">البحث بالاسم</h5>
                                <h5 id="SearchByEmail">البحث بالاميل</h5>
                                <h5 id="SearchByPhone">البحث بالهاتف</h5>
                                <h5 id="SearchByUser">البحث بالمنشئ</h5>
                            </div>
                        </div>
                        <span class='bx bx-search'></span>
                    </div>
                    <%- include('Partials/SearchDate.ejs'); -%>
                </div>

                <div class="Table-Container">
                    <table class="Table HideTh">
                        <thead>
                            <tr>
                                <th>م</th>
                                <th>الاسم</th>
                                <th>الاميل</th>
                                <th>الهاتف</th>
                                <th>الاجراء</th>
                            </tr>
                        </thead>
                        <tbody class="Table-body"></tbody>
                    </table>
                </div>
        </div>

        <div class="Form-Container Form-ADD Form-User">
            <div class="overlow"></div>
            <form class="Form">
                <div class="Form-scroll">
                    <i onclick="Hide_Container()" class="bx bx-x X-Toast"></i>
                    <div class="Form-header">
                        <div class="Wrapper-Tilte">
                            <h3>اضافة مستخدم جديد</h3>
                            <div class="line">
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                        <i class="Form-logo">
                            <img src="Img/Logo.png" alt="" srcset="">
                            <h1 class="logo-text">MODERN</h1>
                        </i>
                    </div>

                    <div class="Form-body">
                        <div class="Row grid-2">
                            <div class="input-box">
                                <input type="text" class="Name" required>
                                <label>الاسم *</label>
                                <span class="bx bx-user"></span>
                            </div>
                            <div class="input-box">
                                <select class="TypeUser" onchange="ShowOrHideTable(value)">
                                    <option value="User" selected>مستخدم</option>
                                    <option value="Admin">مدير</option>
                                </select>
                                <label>نوع المستخدم</label>
                                <span class='bx bxs-category-alt'></span>
                            </div>
                        </div>
                        <div class="Row grid-2">
                            <div class="input-box">
                                <input type="email" class="Email" required>
                                <label>الاميل</label>
                                <span class='bx bx-envelope'></span>
                            </div>
                            <div class="input-box">
                                <input type="tel" class="Phone" required>
                                <label>الهاتف </label>
                                <span class='bx bx-phone'></span>
                                <i class='bx bx-phone'></i>
                            </div>
                        </div>
                        <div class="Row grid-2">
                            <div class="input-box">
                                <input type="password" class="Password" required>
                                <label>كلمة المرور </label>
                                <span class='bx bx-lock'></span>
                            </div>
                            <div class="input-box">
                                <input type="password" class="ConfirmPassword" required>
                                <label>تأكيد كلمة المرور </label>
                                <span class='bx bx-lock'></span>
                            </div>
                        </div>
                        <div class="Table-Container">
                            <table class="Table">
                                <thead>
                                    <tr>
                                        <th width="65%">صلاحيات المستخدم</th>
                                        <th>عرض</th>
                                        <th>اضافة</th>
                                        <th>تعديل</th>
                                        <th>حذف</th>
                                    </tr>
                                </thead>
                                <tbody class="Table-body">
                                    <tr id="Home">
                                        <td>الصفحة الرئيسية</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                    </tr>
                                    <tr id="Customers">
                                        <td>العملاء</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Suppliers">
                                        <td>الموردين</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Products">
                                        <td>المنتجات</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Receipts">
                                        <td>الفواتير</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="ReceiptsSalse">
                                        <td>فواتير مبيعات</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="ReceiptsPurchases">
                                        <td>فواتير مشتريات</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Revenues">
                                        <td>الايرادات</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Expenses">
                                        <td>المصاريف</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                    <tr id="Cash">
                                        <td>دفتر النقدية</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                        <td><input type="checkbox" style="display: none;"></td>
                                    </tr>
                                    <tr id="Users">
                                        <td>المستخدمين</td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                        <td><input type="checkbox"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="Form-footer">
                        <button type="button" id="Save" onclick="NewUser(id)" class="btn btn-Save">حفظ
                            البيانات</button>
                        <button type="button" onclick="Hide_Container()" class="btn btn-Cancel">الغاء</button>
                    </div>
                </div>
            </form>
        </div>



        <%- include('Partials/Footer.ejs'); -%>

            <script src="Js/22-Users.js"></script>

            </body>

            </html>