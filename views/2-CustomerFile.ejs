<%- include('Partials/Header.ejs'); -%>

    <%- include('Partials/Menu.ejs'); -%>
        <% let SubTitle="عميل" %>
            <% if (Title.includes("المورد")){ %>
                <% SubTitle="مورد" %>
                    <% } %>
                        <div class="Layout-Container">

                            <%- include('Partials/DetailsCompany.ejs'); -%>
                                <div class="Wrapper-Tilte">
                                    <h1 class="Title-Container2">كشف حساب ال<%= SubTitle %></h1>
                                </div>

                                <div class="Person-Details Person-Img FileID" id="<%= FileID %>" index="<%= FileIndex %>">
                                    <img src="Img/avatar.png" alt="" srcset="">
                                    <div class="right">
                                        <div class="item">
                                            <h4>اسم ال<%= SubTitle %></h4>
                                            <p class="Name"></p>
                                        </div>
                                        <div class="item">
                                            <h4>العنوان</h4>
                                            <p class="Address"></p>
                                        </div>
                                        <div class="item">
                                            <h4>الهاتف</h4>
                                            <p class="Phone"></p>
                                        </div>
                                    </div>
                                    <div class="left">
                                        <div class="item">
                                            <h4>اجمالي المدين (عليه)</h4>
                                            <p class="Debit"></p>
                                        </div>
                                        <div class="item">
                                            <h4>اجمالي الدائن (له)</h4>
                                            <p class="Credit"></p>
                                        </div>
                                        <div class="item">
                                            <h4>المديونية الحالية</h4>
                                            <p Balance="" BalanceType="" class="Balance"></p>
                                        </div>
                                        <%- include('Partials/Btns.ejs'); -%>
                                    </div>
                                </div>

                                <div class="Search-Container">
                                    <div class="input-box">
                                        <input type="search" id="SearchByDocType" class="SearchInput" onkeyup="Search()"
                                            required>
                                        <label>البحث بنوع المستند </label>
                                        <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                                        <div class="Filter-box">
                                            <div class="tooltip arrow arr-bottom-left">حدد طريقة البحث</div>
                                            <i class='bx bxs-filter-alt Filter-icon' onclick="ShowFilter()"></i>
                                            <div class="filter-item arrow arr-top-left">
                                                <h5 id="SearchByDocType" class="active">البحث بنوع المستند</h5>
                                                <h5 id="SearchByDocNu">البحث رقم المستند</h5>
                                                <h5 id="SearchByStatment">البحث بالبيان</h5>
                                                <h5 id="SearchByUser">البحث بالمنشئ</h5>
                                            </div>
                                        </div>
                                        <span class='bx bx-search'></span>
                                    </div>
                                    <%- include('Partials/SearchDate.ejs'); -%>

                                </div>

                                <div class="Table-Container">
                                    <table class="Table">
                                        <thead>
                                            <tr>
                                                <th>م</th>
                                                <th>
                                                    <div class="FlexTH">
                                                        <Span>التاريخ</Span>
                                                        <i id="DocDate" class='bx bx-filter-alt Filter-icon'
                                                            onclick="SortMyData(event)"></i>
                                                    </div>
                                                </th>
                                                <th>رقم المستند</th>
                                                <th>نوع المستند</th>
                                                <th>بيان</th>
                                                <th>مدين</th>
                                                <th>دائن</th>
                                                <th>رصيد</th>
                                                <th>المنشئ</th>
                                            </tr>
                                        </thead>
                                        <tbody class="Table-body"></tbody>
                                    </table>
                                </div>
                        </div>


                        <div class="Form-Container Form-ADD">
                            <div class="overlow"></div>
                            <form class="Form">
                                <div class="Form-scroll">
                                    <i onclick="Hide_Container()" class="bx bx-x X-Toast"></i>
                                    <div class="Form-header">
                                        <div class="Wrapper-Tilte">
                                            <h3>تعديل بيانات ال<%= SubTitle %></h3>
                                            <div class="line">
                                                <div></div>
                                                <div></div>
                                                <div></div>
                                            </div>
                                        </div>
                                        <i class="Form-logo">
                                            <img src="Img/Logo.png" alt="" srcset="">
                                            <h1 class="logo-text">MODERN</h1>
                                        </i>
                                    </div>

                                    <div class="Form-body">
                                        <div class="input-box">
                                            <input type="text" class="Name" required>
                                            <label>الاسم *</label>
                                            <span class="bx bx-user"></span>
                                        </div>
                                        <div class="Row grid-2">
                                            <div class="input-box">
                                                <input type="text" class="City" required>
                                                <label>المدينه</label>
                                                <span class='bx bx-location-plus'></span>
                                            </div>
                                            <div class="input-box">
                                                <input type="text" class="Address" required>
                                                <label>العنوان تفصيلي</label>
                                                <span class='bx bx-location-plus'></span>
                                            </div>
                                        </div>
                                        <div class="Row grid-3A">
                                            <div class="input-box">
                                                <input type="tel" class="Phone" required>
                                                <label>الهاتف </label>
                                                <span class='bx bx-phone'></span>
                                            </div>
                                            <div class="input-box">
                                                <input type="number" class="Balance" min="0" required>
                                                <label>الرصيد</label>
                                                <div class="tooltip arrow arr-top-right">الرصيد الافتتاحي وهو
                                                    رصيد ال<%= SubTitle %> قبل
                                                        السيستم
                                                </div>
                                                <span class='bx bx-dollar'></span>
                                            </div>
                                            <div class="input-box">
                                                <select class="BalanceType">
                                                    <option value="empty" selected hidden>غير محدد</option>
                                                    <option value="Debit">مدين (عليه)</option>
                                                    <option value="Credit">دائن (له)</option>
                                                    <option value="tooltip" disabled>لو ال<%= SubTitle %> عليه مديونية
                                                            اختار مدين
                                                            (عليه)
                                                    </option>
                                                </select>
                                                <label>نوع الرصيد</label>
                                                <span class='bx bx-dollar'></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="Form-footer">
                                        <button type="button" onclick="EditCustomerOrSupplier(id)"
                                            class="btn btn-Save">حفظ
                                            البيانات</button>
                                        <button type="button" onclick="Hide_Container()"
                                            class="btn btn-Cancel">الغاء</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <%- include('Partials/Footer.ejs'); -%>

                            <script src="Js/5-CustomerFile.js"></script>

                            </body>

                            </html>